<mvc:View controllerName="testproject.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <App id="app">
    <Page id="page" title="{i18n>title}">
    <content>
        <VBox id="vb1" class="sapUiSmallMargin">
           <Label text="Nombre desde CI/CD2" />
           <Input id="inputNombre" placeholder="Ingresa tu nombre" />

           <Label text="Apellido" />
           <Input id="inputApellido" placeholder="Ingresa tu apellido" />

           <Button text="Mostrar datos" press="onMostrarDatos" class="sapUiMediumMarginTop" type="Emphasized"/>

        </VBox>
    </content>
    </Page>
    </App>

    
</mvc:View>